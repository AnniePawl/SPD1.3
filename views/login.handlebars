<img class="acorn-pattern" src="/assets/acorn-pattern.png" alt="acorn pattern">

<div class="login-container">

    <form action="/login" method="POST">

        <h1 class="login-heading">LOGIN</h1>

        <!-- Email -->
        <div class="form-group">
            <input class="form-control" id="username" type="text" placeholder="Enter Your Username" name="username"/>
        </div>

        <!-- Password -->
        <div class="form-group">
            <input class="form-control" id="password" type="text" name="password" placeholder="Create a Password"/>
        </div>

        <!-- Login Button -->
        <button class="btn btn-primary" type="submit">Login</button>

    </form>

</div>
